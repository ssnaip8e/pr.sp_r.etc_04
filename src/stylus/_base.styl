html
  box-sizing: border-box
  width 100%
  height: 100%
  font-size: 100%
*,
*::before,
*::after
  box-sizing: inherit
body
  width: inherit
  height: inherit
  max-width: 1920px
  margin: 0
  margin: 0 auto
  color: $on-bg
  font-family: $serif
  background-color: $bg
ul
  list-style: none
  padding: 0
  margin: 0
img
  display: block
  max-width: 100%
  height: auto
a
  display: inline-block
  text-decoration: none
  color: inherit
