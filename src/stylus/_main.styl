.main
  padding-top: 59px
.container
  display: flex
  justify-content: space-between
  max-width: $container
  margin: 0 auto
.content
  max-width: $containerContent
  &__blog-one
    display: flex
    flex-flow: wrap
    gap: 30px
  &__blog-two
    max-width: 770px
    min-height: 561px
    margin-top: 60px
    margin-bottom: 30px
  &__blog-tree
    display: flex
    flex-flow: wrap
    gap: 30px
.post
  width: $widthCard
  min-height: $heightCard
  box-shadow: 0 1px 1px $postShadow
  &:hover
    box-shadow: 0 4px 8px $postShadow
  &__head
    width: $widthCardImg
    height: $heightCardImg
  &__body
    padding: 15px 42px
    text-align: center
  &__label
    color: $accent
    font-family: $sans
    font-size: 12px
    font-weight: 400
    text-transform: uppercase
  &__title
    margin: 4px 0 10px
    font-size: 20px;
    line-height: line-heightTitle
  &__info
    display: flex
    gap: 8px
    justify-content: center
    font-size: 12px
    color: $surfaceText
  &__author
    &::before
      content: "By"
      display: inline-block
      margin-right: 4px
      color: $on-bg-variant
.pagination
  padding: 60px 0 80px
  width: $widthPagination
  height: $heightPagination
  margin: 0 auto
  &__list
    display: flex
    justify-content: space-between
    padding: 16px 25px
    font-family: $sans
    font-size: 14px
    border: 1px solid $surfaceBorder
  &__older
    &::before
      content: "<"
      display: inline-block
      margin-right: 8px
      color: $surfaceText
    &:hover
      color: $on-bg
      opacity:  1
      scale: 1.25
  &__next
    &::after
      content: ">"
      display: inline-block
      margin-left: 8px
      color: $surfaceText
    &:hover
      color: $on-bg
      opacity:  1
      scale: 1.25
  &__number
    opacity:  .75
    &:hover
      color: $on-bg
      opacity:  1
      scale: 1.25
.sidebar
  display: flex
  flex-direction: column
  max-width: $containerSidebar
.section
  &:not(.about)
    margin-top: 70px
  &__title
    width: 270px
    line-height: 50px
    margin-top: 0
    margin-bottom: 20px
    font-size: 16px
    font-weight: 400
    text-align: center
    border: 1px solid $surfaceBorder
.featured__blog
  display: flex
  flex-direction: column
  gap: 30px
  .post
    width: $widthCardSmall
    min-height: $heightCardSmall
    &__head
      width: $widthCardSmallImg
      height: $heightCardSmallImg
    &__body
      min-height: 127px
      padding: 14px 10px
    &__label
      font-size: 12px
    &__title
      font-size: 18px




