.header
  min-height: 800px
  max-width: 1920px
.nav
  position: relative
  display: flex
  justify-content: space-between
  align-items: center
  min-height: 100px
  max-width: $containerNav
  margin: 0 auto
  padding: 0 16px
  &::after
    content: ""
    display: block
    position: absolute
    bottom: 9px
    left: 7%
    height: 1px
    width: $container
    background-color: $postShadow
    opacity: .5
  &__menu
    display: flex
    gap: 24px
  &__link
    font-size: 14px;
    &:hover
      color: $accent
.logo
  position: relative
  font-size: 25px
  font-weight: bold
  text-transform: uppercase
  &::after
    content: ""
    display: block
    position: absolute
    bottom: 6px
    height: 6px
    width: 100%
    background-color: $accent
    opacity: .5
.hero
  min-height: 700px
  color: $on-image
  background-image: url('./../../assets/img/hero.jpg')
  background-repeat: no-repeat
  background-size: cover
  &__container
    position: relative
    max-width: $container
    margin: 0 auto
  &__head
    position: relative
    bottom: -500px
    max-width: 560px
  &__label
    font-family: $sans
    font-size: 14px;
    text-transform: uppercase;
  &__title
    margin-top: 0
    margin-bottom: 10px
    font-size: 40px
    line-height: $line-heightHeroTitle
  &__info
    display: flex
    gap: 8px
    font-size: 14px;
  &__author
    &::before
      content: "By"
      display: inline-block
      margin-right: 4px
      color: $on-bg-variant
