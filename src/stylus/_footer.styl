.footer
  max-width: 1170px
  margin: 100px auto 0
  text-align: center
  > .logo
    display: inline-block
    margin-bottom: 60px
  &__menu
    display: flex
    justify-content: center
    gap: 30px
    margin-bottom: 29px
    font-family: $sans
    font-size: 14px
    color: $on-bg-variant
    @media screen and (max-width: 500px)
      flex-flow: column
      gap: 8px
  &__link
    &:hover
      color: $accent
  &__list
    display: flex
    justify-content: center
    gap: 20px
    margin-bottom: 40px
    @media screen and (max-width: 500px)
      flex-flow: wrap
      gap: 8px
.copyright
  padding: 30px 0
  font-family: $sans
  font-size: 14px
  color: $on-bg-variant
  border-top: 1px solid $surfaceBorder
